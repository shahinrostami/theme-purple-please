    "eslint": "^6.6.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "~4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snyk/eventloop-spinner.git"
